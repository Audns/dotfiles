{
  "reload_style_on_change": true,
  "layer": "top",
  "position": "top",
  "exclusive": true,
  "modules-left": [
    "hyprland/workspaces"
  ],
  "modules-center": [
    "privacy",
    "clock"
  ],
  "modules-right": [
    "tray",
    "pulseaudio"
  ],
  "privacy": {
    "icon-spacing": 4,
    "icon-size": 18,
    "transition-duration": 250,
    "modules": [
      {
        "type": "screenshare",
        "tooltip": false,
        "tooltip-icon-size": 24
      },
      {
        "type": "audio-in",
        "tooltip": false,
        "tooltip-icon-size": 24
      },
      {
        "type": "camera",
        "tooltip": true,
        "tooltip-icon-size": 24
      }
    ],
    "expand": false,
    "ignore-monitor": true,
    "ignore": [
      {
        "type": "audio-in",
        "name": "cava"
      },
      {
        "type": "screenshare",
        "name": "obs"
      }
    ]
  },
  "tray": {
    // "max-icon-size": 30,
    "spacing": 4,
    "icon-size": 16
    // "tooltip": false,
    // "reverse-direction": false,
    // "show-passive-items": false
  },
  "pulseaudio": {
    "format": "Vol: {volume}%",
    "format-muted": "Vol: muted",
    "format-source": "üéôÔ∏è",
    "format-source-muted": "",
    "scroll-step": 3,
    "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-click-middle": "pavucontrol"
  },
  "battery": {
    "interval": 3,
    "format": "Bty: {capacity}%",
    "format-charging": "Bty(charging):{capacity}"
  },
  "clock": {
    "interval": 60,
    "format": "{:%a, %b%d, %H:%M}",
    "tooltip": false,
    "return-type": "json",
    "escape": true
  }
}