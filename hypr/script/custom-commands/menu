Spotify (OZONE) | $HOME/.local/share/spotify-launcher/install/usr/bin/spotify --enable-features=UseOzonePlatform --ozone-platform=wayland
Dotfiles | ghostty --working-directory=$HOME/dotfiles
Menu | ghostty --working-directory=$HOME/dotfiles/hypr/script/custom-commands -e bash -c "helix $HOME/dotfiles/hypr/script/custom-commands/menu"
Clear cliphist | $HOME/dotfiles/hypr/script/float-confirm.sh -e rm -rf $HOME/.cache/cliphist/db
vmrestart | $HOME/dotfiles/hypr/script/float-confirm.sh -e "sudo modprobe -v vmmon; sudo modprobe vmnet; sudo systemctl start vmware-networks.service; sudo systemctl start vmtoolsd.service"
sshd | $HOME/dotfiles/hypr/script/float-confirm.sh -e sudo systemctl start sshd
reload-waybar | pkill waybar; sleep 0.2; waybar & disown
pulsemixer | bash -c "hyprctl dispatch exec \"[float; size 1500 1000; center] ghostty -e pulsemixer\""
nmtui | bash -c "hyprctl dispatch exec \"[float; size 1500 1000; center] kitty -e nmtui\""
impala | $HOME/dotfiles/hypr/script/float-window.sh ghostty -e impala
makohistory | bash -c "hyprctl dispatch exec \"[float; size 1500 1000; center] ghostty -e bash -c 'makoctl history | helix'\""
iwconfig | bash -c "hyprctl dispatch exec \"[float; size 1800 1100; center] ghostty -e watch -n 2 iwconfig\""
Screenshots | thunar $HOME/Pictures/Screenshots
powerprofile1 balance | powerprofilesctl set balanced; notify-send "PowerProfile" "Balance"
powerprofile0 power-saver | powerprofilesctl set power-saver; notify-send "PowerProfile" "power-saver"
powerprofile2 performance | powerprofilesctl set performance; notify-send "PowerProfile" "Performance"
